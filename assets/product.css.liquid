.product-single__title{
    font-size: 23px;
    font-weight: 500;
    color: #000;
}
.spr-container{
    border: none;
    padding: 0px;
}
.spr-header-title{
    display: none;
}
.price-item.price-item--regular{
    font-size: 28px;
    color: rgb(254,79,24);
    font-weight: 600;
}
.main-product__detail__info ul li {
    font-size: 13px;
    font-weight: 300;
    color: rgb(80,80,80);
}
.main-product__detail__info li::before {
    content: '\2022';
    color: rgb(254,79,24);
    display: inline-block;
    width: 12px;
    font-size: 17px;
}
.product-single__description{
    font-size: 14px;
    line-height: 28px;
    margin-top: 15px;
    color: rgb(17,17,17);
}
.product-single__description.rte{
    margin-bottom: 0px;
}
.product-single__description span{
font-size: 14px;
}

.choose-option{
    width: 100%;
    display: flex;
    margin-bottom: 20px;
}
.product-form__item.product-form__item--quantity{
    display: flex;
    flex: 0 0 180px;
    margin-right: 20px;
}
.product-form__item label {
    margin: 10px 10px 10px 0;
}
#smartwishlist .tooltip{
    position: relative;
}

.social-sharing{
    margin-top: 20px;
}
