.site-header{
    padding-top: 10px;
    padding-bottom: 10px;
}
.site-nav__link--button{
    outline: none;
}
.site-nav--has-dropdown:hover .site-nav__link--main .site-nav__label{
    color: rgb(254,79,24);
    border: none;
}
.site-nav__link--main .site-nav__label {
    font-weight: 600;
    border: none;
}
.site-nav__link--main .site-nav__label:hover{
    color: rgb(254,79,24);
}
.site-nav__link--active .site-nav__label{
    color: rgb(254,79,24);
    border: none;
}
.site-nav a{
    text-decoration: none;
}
.site-nav > li{
    padding-top: 10px;
    padding-bottom: 10px;
}
.site-nav__dropdown{
    top: 50px;
}
.features_image{
    display: flex;
    width: 100%;
    justify-content: space-between;
    margin-top: 20px;
}
.features_image .flex-item{
    width: 50%;
    margin: 10px;
    position: relative;
}
.features_image .flex-item:hover a img{
    opacity: 0.8;
}
.features_image .flex-item a{
    padding: 0px;
}
.features_image .flex-item a span{
    position: absolute;
    left: 20px;
    bottom: 50px;
    color: #fff;
    font-size: 16px;
}
.features_image .flex-item a span h5{
    font-size: 22px;
    font-weight: 600;
}