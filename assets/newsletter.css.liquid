.index-section--newsletter-background {
    background-color: rgb(255,194,174);
}

.newsletter-section .section-header{
    float: left;
    display: flex;
    margin-top: 10px;
}
.newsletter-section .section-header h2{
    font-size: 20px;
    font-weight: 600;
}

.newsletter-section .section-header .newsletter__title{
    font-size: 20px;
    font-weight: 600;
}
.newsletter-section .input-group{
    flex-wrap: nowrap;
}

.newsletter-section .section-header .rte p{
    border-left: 2px solid rgb(220,174,159);
    padding-left: 20px;
    font-size: 15px;
    font-weight: 300;
    margin: 1px 0px 0px 20px;
}
.newsletter-section form{
    float: right;
}
#shopify-section-newsletter{
    padding: 0px;
}
.input-group__field {
    margin-bottom: 0px;
}
@media only screen and (max-width: 1200px){
    .newsletter-section .section-header{
        float: none;
        display: initial;
    }
    .newsletter-section .section-header .rte p{
        border: none;
        margin-bottom: 40px;
    }
    .newsletter-section form{
        float: none;
    }
}