#insta-feed{
    width: 100%;
}
#insta-feed h2{
    text-align: left;
}
.site-footer{
    margin-top: 0px;
}
.site-footer__item h2{
    letter-spacing: 0;
    font-size: 18px;
    font-weight: 600;
    color: #000;
    margin-bottom: 30px;
}
.site-footer__rte,.site-footer__contact__item, .site-footer__linklist-item a{
    font-size: 14px;
    font-weight: 400;
    color: #3d4246;
    padding: 0px;
    margin-bottom: 10px;
}
.site-footer__contact__item i{
    color: rgb(254,79,24);
}
.site-footer__linklist-item a:hover{
    color: rgb(254,79,24);
}
.site-footer__rte p{
    line-height: 2;
}
.site-footer .small--hide{
    text-align: left;
}